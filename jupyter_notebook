#install jupyter notebook

sudo apt-get install python3-pip python3-dev
sudo apt-get install -y python3-setuptools

python3 -m pip install --upgrade pip
python3 -m pip install jupyter
python3 -m pip install jupyter-core

aplikasi terinstall di folder ~/.local/bin

tambahkan alias ke bashrc atau zshrc 
alias jupyter="python3 ~/.local/bin/jupyter-notebook"


# uninstall jupyter notebook
python3 -m pip uninstall -y jupyter jupyter_core jupyter-client jupyter-console notebook qtconsole nbconvert nbformat
