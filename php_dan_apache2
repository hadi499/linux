# install php dan apache
sudo apt-get install apache2
sudo apt-get install php libapache2-mod-php php-mysql php-curl php-gd php-json php-pear php-dev php-xmlrpc php-zip php-fpm php-xml php-mbstring 


# remove apache
sudo apt-get remove --purge php* libapache2* apache2*
sudo apt-get clean


# remove nginx
sudo apt-get remove nginx nginx-common  # Removes all but config files.
sudo apt-get purge nginx nginx-common  # Removes everything.
